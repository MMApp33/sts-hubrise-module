# HubRise Integration Configuration
# Copy this file to .env and fill in your actual values

# HubRise OAuth Credentials
# Get these from your HubRise Developer Account: https://manager.hubrise.com/developers
HUBRISE_CLIENT_ID=your_hubrise_client_id_here
HUBRISE_CLIENT_SECRET=your_hubrise_client_secret_here

# OAuth Redirect URI - Must match the one registered in HubRise
HUBRISE_REDIRECT_URI=https://devapi.scantoserve.com/api/hubrise/callback

# HubRise API Scopes
HUBRISE_SCOPE=location[orders.write,catalog.write]

# Webhook Secret for validating HubRise webhook signatures
HUBRISE_WEBHOOK_SECRET=your_webhook_secret_here

# Encryption secret for storing tokens securely (minimum 32 characters)
ENCRYPTION_SECRET=your_encryption_secret_32_chars_minimum_length_required

# Your application URL (for OAuth redirects)
APP_URL=https://app.scantoserve.com
